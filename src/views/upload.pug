extends layout.pug

block content
    div.upload__container
        div.upload__video
            video#preview
            div.upload__video_button
                button#seeCamera.social__btn 카메라 연결
                button#actionBtn.social__btn 녹화 시작
        if errorMessage
            span=errorMessage
        form(method="POST", enctype="multipart/form-data")
            label(for="video" id="video-label")
                video(id="videofile" loop)
                i.fas.fa-video
                input(type="file", accept="video/*", required, id="video", name="video")
            label(for="thumb" id="file-label")
                img(id="preview-image" src="").preview-thumb
                i.fas.fa-image
                input(type="file", accept="image/*", required, id="thumb", name="thumb")
            input(placeholder="제목", required, type="text", name="title", maxlength=80)
            input(placeholder="설명", required, type="text", name="description", minlength=2)
            input(placeholder="해시태그 ( , 로 구분해 주세요)", required, type="text", name="hashtags")
            input(type="submit", value="비디오 업로드")

block scripts
    script(src="/static/js/recorder.js") 