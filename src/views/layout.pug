doctype html
html(lang="ko")
    head
        title #{pageTitle} | Youtube
        link(rel="stylesheet" href="https://unpkg.com/mvp.css")
    body
        header
            h1=pageTitle
            nav
                ul 
                    li 
                        a(href="/") Home
                    if isLoggedIn
                        li 
                            a(href="/users/logout") Log Out
                        li 
                            a(href="/profile") #{user.username} Ïùò Profile &rarr;
                    else 
                        li 
                            a(href="/join") Join
                        li 
                            a(href="/login") Login
                    li 
                        a(href="/search") Search
                    li
                        a(href="/videos/upload") Upload Video
                        
        main  
            block content
    include partials/footer.pug