extends layout.pug

block content
    if errMessage
        span=errMessage
    img(src=`${user.socialOnly ? "" : "/"}` + user.avatarUrl, width="100", height="100")    
    form(method="POST", enctype="multipart/form-data")
        label(for="avatar") Avatar
        input(type="file", id="avatar", name="avatar", accept="image/*")
        input(name="name", type="text", placeholder="Name", required, value=user.name)
        input(name="username", type="text", placeholder="Username", required, value=user.username)
        input(name="email", type="email", placeholder="Email", required, value=user.email)
        input(name="location", type="text", placeholder="Location", required, value=user.location)
        input(type="submit", value="Update Profile")
        if !user.socialOnly
            hr
            a(href="change-password") Change Password &rarr;