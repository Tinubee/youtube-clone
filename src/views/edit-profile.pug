extends layout.pug

block content
    if errMessage
        span=errMessage
    div.profile__data
        if !user.avatarUrl
            span ðŸ˜€
        else
            if user.avatarUrl.includes("k.kakaocdn.net")
                img.header__avatar(src=user.avatarUrl).avatar
            else 
                if user.avatarUrl.startsWith("https://") 
                    img.header__avatar(src=user.avatarUrl,crossorigin).avatar
                else 
                    img.header__avatar(src="/"+user.avatarUrl,crossorigin).avatar
                    
    form(method="POST", enctype="multipart/form-data").edit-profile__form
        label(for="avatar") Avatar
        input(type="file", id="avatar", name="avatar", accept="image/*")
        input(placeholder="Name", name="name", type="text", required, value=user.name)
        input(placeholder="Email", name="email", type="email", required, value=user.email)
        input(placeholder="Username", name="username", type="text", required, value=user.username)
        input(placeholder="Location", name="location", type="text", required, value=user.location)
        input(type="submit", value="Update Profile")
        if !user.socialOnly
            div.edit-profile__password
                a(href="change-password") Change Password &rarr;