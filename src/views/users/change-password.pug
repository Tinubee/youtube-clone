extends ../layout.pug

block content
    if errMessage
        span=errMessage
    form(method="POST")
        input(name="oldPassword", type="password", placeholder="기존 비밀번호", required)
        input(name="newPassword", type="password", placeholder="새로운 비밀번호", required)
        input(name="confirmPassword", type="password", placeholder="새로운 비밀번호 확인", required)
        input(type="submit", value="비밀번호 변경하기")